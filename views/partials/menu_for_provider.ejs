</div>

<script>
    // ดึง URL ปัจจุบัน
    const currentPath = window.location.pathname;

    // กำหนดค่า Path และ Element ID ที่เกี่ยวข้อง
    const menuItems = {
        "/provider-productList": "ProductList",
        "/provider-addProduct": "AddProduct",
        "/provider-productHistory": "ProductHistory",
    };

    // เช็คว่าหน้านี้ตรงกับเมนูไหน
    if (menuItems[currentPath]) {
        document.getElementById(menuItems[currentPath]).classList.add("text-blue-600", "font-bold","border-b-2","pb-1");
    }
</script>