<!-- userCanceledOrders.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>รายการที่ถูกยกเลิก</title>
    <link rel="stylesheet" href="/public/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100">
    <div id="navbarContainer">
        <div id="defaultNavbar">
            <%- include('partials/narbar') %>
        </div>
        <div id="searchNavbar" style="display: none;">
            <%- include('partials/narbar_search') %>
        </div>
    </div>

<div class="flex max-w-5xl mx-auto mt-10 bg-white shadow-lg rounded-lg">
    <%- include('partials/aside_for_user') %>
    
    <div class="flex max-w-6xl mx-auto mt-10 bg-white shadow-lg rounded-lg">
        <aside class="w-1/4 p-5 bg-gray-200 rounded-l-lg">
            <ul class="space-y-4">
                <li class="font-semibold">บัญชีของฉัน</li>
                <li><a href="/user-profile" class="text-gray-600">ข้อมูลของฉัน</a></li>
                <li><a href="/user-payment" class="text-gray-600">ช่องทางการชำระเงิน</a></li>
                <li><a href="/user-address" class="text-gray-600">ที่อยู่</a></li>
                <li><a href="/user-changepass" class="text-gray-600">เปลี่ยนรหัสผ่าน</a></li>
                <li><a href="/user-orderlist" class="text-gray-600 font-semibold">การซื้อของฉัน</a></li>
            </ul>
        </aside>
        
        <section class="w-3/4 p-5">
            <h2 class="text-xl font-bold mb-4">รายการที่ถูกยกเลิก</h2>
            <div class="flex border-b pb-2 space-x-4">
                <a href="/orders/all" class="text-gray-600">ทั้งหมด</a>
                <a href="/orders/pending" class="text-gray-600">ที่ต้องชำระ</a>
                <a href="/orders/shipping" class="text-gray-600">ที่ต้องได้รับ</a>
                <a href="/orders/completed" class="text-gray-600">สำเร็จแล้ว</a>
                <a href="/orders/canceled" class="text-blue-600 border-b-2 border-blue-600 pb-1">ยกเลิก</a>
            </div>
            
            <div class="mt-4">
                <% canceledOrders.forEach(order => { %>
                    <div class="flex justify-between items-center bg-gray-100 p-4 rounded mb-4">
                        <div class="flex items-center space-x-4">
                            <img src="<%= order.image %>" alt="Product Image" class="w-20 h-20 object-cover rounded">
                            <div>
                                <p class="text-gray-700 font-semibold"><%= order.productName %></p>
                                <p class="text-gray-600">ตัวเลือกสินค้า: <%= order.details %></p>
                                <p class="text-gray-600">จำนวน: x<%= order.quantity %></p>
                            </div>
                        </div>
                        <div>
                            <p class="text-red-600">ยกเลิกแล้ว</p>
                            <p class="text-gray-600">ราคา: <%= order.price %> บาท</p>
                            <button class="bg-blue-600 text-white px-4 py-2 rounded mt-2">สั่งซื้อใหม่</button>
                        </div>
                    </div>
                <% }) %>
            </div>
        </section>
    </div>
</body>
</html>
