<!-- userCanceledOrders.ejs -->
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>รายการที่ถูกยกเลิก | FINFUR</title>
    <link rel="icon" type="image/png" href="/images/logo_main.png">
    <link rel="stylesheet" href="/public/style.css">
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = { darkMode: 'class' }; // ใช้ dark mode ผ่าน class
    </script>
</head>
<body class="bg-gray-100 dark:bg-gray-900">
    <div id="navbarContainer">
        <div id="defaultNavbar">
            <%- include('partials/narbar') %>
        </div>
        <div id="searchNavbar" style="display: none;">
            <%- include('partials/narbar_search') %>
        </div>
    </div>

<div class="flex max-w-5xl mx-auto mt-10 bg-white shadow-lg rounded-lg">
    <%- include('partials/aside_for_user') %>
    
    <div class="flex w-full mx-auto mt-10 bg-white shadow-lg rounded-lg">
        
        <div class="w-3/4 p-5">
            <h2 class="text-xl font-bold mb-4">รายการที่ถูกยกเลิก</h2>
            <%- include('partials/menu_for_user_history') %>

            
            <div class="mt-4">
                 canceledOrders.forEach(order => { %>
                    <div class="flex justify-between items-center bg-gray-100 p-4 rounded mb-4">
                        <div class="flex items-center space-x-4">
                            <img src="= order.image %>" alt="Product Image" class="w-20 h-20 object-cover rounded">
                            <div>
                                <p class="text-gray-700 font-semibold">order.productName %></p>
                                <p class="text-gray-600">ตัวเลือกสินค้า:  order.details %></p>
                                <p class="text-gray-600">จำนวน: x order.quantity %></p>
                            </div>
                        </div>
                        <div>
                            <p class="text-red-600">ยกเลิกแล้ว</p>
                            <p class="text-gray-600">ราคา:  order.price %> บาท</p>
                            <button class="bg-blue-600 text-white px-4 py-2 rounded mt-2">สั่งซื้อใหม่</button>
                        </div>
                    </div>
                % }) %>
            </div>
        </div>
    </div>
</body>
</html>
