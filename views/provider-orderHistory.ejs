        document.addEventListener("DOMContentLoaded", function() {
            let categorySelect = document.getElementById('categorySelect');
            let productIDInput = document.getElementById('productID');
            
            categorySelect.addEventListener('change', function() {
                let selectedValue = this.value;
                productIDInput.value = selectedValue;
            });
        });
        function searchProducts() {
            const searchInput = document.getElementById('productID').value;
            const searchResults = document.getElementById('searchResults');
            const resultItems = searchResults.querySelectorAll('li');
            
            if (searchInput === "") {
                searchResults.style.display = "none";
            } else {
                searchResults.style.display = "block";
                resultItems.forEach(item => {
                    const productID = item.getAttribute('data-id').toLowerCase();
                    const productName = item.getAttribute('data-name').toLowerCase();
                    
                    if (productID.includes(searchInput)) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }
        }
        
        document.getElementById('searchResults').addEventListener('click', function(e) {
            if (e.target && e.target.tagName === 'LI') {
                const productID = e.target.getAttribute('data-id');
                const productName = e.target.getAttribute('data-name');
    
                document.getElementById('categorySelect').value = productID.substring(0, 2);
                document.getElementById('productID').value = productID;
                document.getElementById('productName').value = productName;
    
                document.getElementById('searchResults').style.display = 'none'; 
            }
            });
        function searchUsers() {
            const searchInput = document.getElementById('custUsername').value.toLowerCase();
            const searchResults = document.getElementById('searchUser');
            const resultItems = searchResults.querySelectorAll('li');
            
            if (searchInput === "") {
                searchResults.style.display = "none";
            } else {
                searchResults.style.display = "block";
                resultItems.forEach(item => {
                    const username = item.getAttribute('data-username').toLowerCase();
                    const email = item.getAttribute('data-email').toLowerCase();
                    if (username.includes(searchInput) || email.includes(searchInput)) {
                        item.style.display = '';
                    } else {
                        item.style.display = 'none';
                    }
                });
            }
        }
    
        document.getElementById('searchUser').addEventListener('click', function(e) {
            if (e.target && e.target.tagName === 'LI') {
                const username = e.target.getAttribute('data-username');
                const email = e.target.getAttribute('data-email');
    
                document.getElementById('custUsername').value = username;
    
                document.getElementById('searchUser').style.display = 'none'; 
            }
        });
