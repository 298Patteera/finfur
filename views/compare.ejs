                                        <div id="1-<%= item.productID %>" 
                                            class="productbox p-5 bg-white dark:bg-gray-800 w-[220px] min-h-[340px] rounded-lg shadow-md transform transition duration-300 ease-in-out hover:scale-105 hover:shadow-xl"
